<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include all shared preferences by default -->
    <include domain="sharedpref" path="." />

    <!-- Exclude sensitive authentication data -->
    <!-- Note: Our tokens are stored in EncryptedSharedPreferences,
         but we exclude them for extra security -->
    <exclude domain="sharedpref" path="auth_prefs.xml" />
    <exclude domain="sharedpref" path="encrypted_auth_prefs.xml" />

    <!-- Exclude database files (if any) -->
    <exclude domain="database" path="checking_sn.db" />

    <!-- Exclude cache and temp files -->
    <exclude domain="external" path="cache/" />
    <exclude domain="cache" path="." />
</full-backup-content>
